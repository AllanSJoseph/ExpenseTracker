<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.add.AddExpenseFragment">


    <TextView
        android:id="@+id/edit_expense_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit your Expense"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.172" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_expense_title"
        app:layout_constraintVertical_bias="0.135">


        <EditText
            android:id="@+id/edit_amt"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:hint="Enter amount"
            android:inputType="number" />

        <Spinner
            android:id="@+id/edit_exp_cat_spinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp" />

        <EditText
            android:id="@+id/edit_date"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:hint="Enter Date"
            android:inputType="date" />

        <EditText
            android:id="@+id/edit_note"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:hint="Note (Description)"
            android:inputType="text" />

    </LinearLayout>


    <Button
        android:id="@+id/edit_exp_btn"
        android:layout_width="232dp"
        android:layout_height="58dp"
        android:text="Edit Expense"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.191"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/cancel_exp_btn"
        android:layout_width="232dp"
        android:layout_height="54dp"
        android:text="Cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_exp_btn"
        app:layout_constraintVertical_bias="0.096"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>